#ifndef SS_INTERFACE_H
#define SS_INTERFACE_H

typedef struct
{
	u8 Port;
	u8 EnablePin;
	u8 ComType;
	u8 EnablePort;
}SS;


/*Common Type*/
#define ANODE		1
#define CATHODE		2


void HSS_voidSetNumber(SS ptr_SS, u8 copy_u8Number);
void HSS_voidEnable(SS ptr_SS);
void HSS_voidDisable(SS ptr_SS);



#endif
